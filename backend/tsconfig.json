{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": true,
    "lib": ["es2015","es2020"],      "paths":
    {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
